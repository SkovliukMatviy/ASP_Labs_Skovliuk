@model RentalSystem.Models.Transport

<div class="container mt-4">
    <h2>Деталі авто</h2>
    <div class="card">
        <div class="card-body">
            <h3>@Model.Model</h3>
            <p>Категорія: @Model.Category</p>
            <p>Опис: @Model.Description</p>
            <p>Ціна: @Model.PricePerDay</p>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-secondary mt-2">Назад</a>
</div>